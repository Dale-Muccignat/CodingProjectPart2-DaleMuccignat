BoxLayout:
    orientation: 'vertical'
    Label:
        id: current_trip_label
        text: app.get_current_country()
        font_size: 20
        color: (1, 1, 0.5, 1)
    BoxLayout:
        orientation: 'horizontal'
        Spinner:
            id: country_spinner
            text: app.current_state
            # Values takes a list
            values: app.country_names
            # When text is change, run change_state
            on_text: app.change_state(self.text)
        TextInput:
            id: current_country_input
            multiline: False
            on_text_validate: app.convert_amount(50, "False")
    BoxLayout:
        orientation: 'horizontal'
        Label:
            id: home_country_label
            text: app.home_state
        TextInput:
            id: home_country_input
            multiline: False
            on_text_validate: app.convert_amount(20, "True")
    Label:
        id: date_label
        text: "  Today is: \n" + app.get_current_time()
    BoxLayout:
        orientation: 'horizontal'
        Label:
            id: status_label
        Button:
            id: update_button
            on_press: app.change_state(country_spinner.text)


